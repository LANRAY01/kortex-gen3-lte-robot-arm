<?xml version="1.0"?>
<robot name = "kortex-gen3-lite">
 <material name="green">
        <color rgba="0 0.6 0 1 "/>
    </material> 
    <material name ="gray">
        <color rgba= "0.9 0.9 0.8 1"/>
    </material>    

    <link name = "base_link">
        <visual>
            <geometry>
                <mesh filename = "package://kortex-gen3_description/meshes/base_link.STL" scale ="2.0 2.0 2.0 "/>
            </geometry>
            <origin xyz= "0 0 0" rpy= "0 0 0"/>
            <material name = "gray"/>
        </visual>    
    </link > 


     <link name = "shoulder_link">
        <visual>
            <geometry>
                <mesh filename = "package://kortex-gen3_description/meshes/shoulder_link.STL" scale ="2.0 2.0 2.0 "/>
                <origin xyz = "0 0 0.25" rpy=" 0 0 0"/>
            </geometry>
             <material name = "gray"/>
        </visual>    
    </link > 
    <joint name = "base_to_shoulder" type = "fixed">        
        <parent link = "base_link"/>
        <child link = "shoulder_link"/>
        <origin xyz = "0 0 0.25" rpy = "0 0 4.71"/>
        <axis xyz = "0 0 0"/>
    </joint>   

    <link name = "arm_link">
        <visual>
            <geometry>
                <mesh filename = "package://kortex-gen3_description/meshes/arm_link.STL" scale ="2.0 2.0 2.0 "/>
                <origin xyz = "0 0 0.20" rpy=" 0 0 0"/>
            </geometry>
            <material name = "gray"/>
        </visual>    
    </link > 
    <joint name = "shoulder_to_arm" type = "revolute">        
        <parent link = "shoulder_link"/>
        <child link = "arm_link"/>
        <origin xyz = "0 0 0.20" rpy = "1.57 0.38 0"/>
        <axis xyz = "0 0 1"/>
        <limit lower= "-3.14" upper ="3.14" velocity ="100" effort= "100"/>
    </joint>

    <link name = "forearm_link">
        <visual>
            <geometry>
                <mesh filename = "package://kortex-gen3_description/meshes/forearm_link.STL" scale ="2.0 2.0 2.0 "/>
                <origin xyz = "0 0 0.20" rpy=" 1 0 0"/>
            </geometry>
            <material name = "gray"/>
        </visual>    
    </link >  

    <joint name = "arm_to_forearm" type = "revolute">        
        <parent link = "arm_link"/>
        <child link = "forearm_link"/>
        <origin xyz = "0 0.55 0" rpy = "0 3.14 1.55"/>
        <axis xyz = "0 0 1"/>
        <limit lower= "-3.14" upper ="3.14" velocity ="100" effort= "100"/>
    </joint>
    <link name = "upper_wrist_link">
        <visual>
            <geometry>
                <mesh filename = "package://kortex-gen3_description/meshes/upper_wrist_link.STL" scale ="2.0 2.0 2.0 "/>
                <origin xyz = "0 0 0" rpy=" 0 0 0"/>
            </geometry>
            <material name = "gray"/>
        </visual>    
    </link >  

    <joint name = "forearm_to_upper_wrist" type = "fixed">        
        <parent link = "forearm_link"/>
        <child link = "upper_wrist_link"/>
        <origin xyz = "0 -0.46 -0.02" rpy = "0 0 -1.57"/>
        <axis xyz = "0 1 0"/>
        <!-- <limit lower= "-3.14" upper ="3.14" velocity ="100" effort= "100"/>  -->
    </joint>

    <link name = "lower_wrist_link">
        <visual>
            <geometry>
                <mesh filename = "package://kortex-gen3_description/meshes/lower_wrist_link.STL" scale ="2.0 2.0 2.0 "/>
                <origin xyz = "-0.44 0 0.44" rpy=" 0 0.57 0"/>
            </geometry>
            <material name = "gray"/>
        </visual>    
    </link >  
    <joint name = "upper_wrist_to_lower_wrist" type = "revolute">        
        <parent link = "upper_wrist_link"/>
        <child link = "lower_wrist_link"/>
        <origin xyz = "0.22 0 0" rpy = "-3.14 4.71 3.14"/>
        <axis xyz = "1 0 0"/>
        <limit lower= "-3.14" upper ="3.14" velocity ="100" effort= "100"/>
    </joint>


</robot>
